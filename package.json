                                                        "language": {
                                                            "type": "string",
                                                            "description": "A language-id (e.g. 'plaintext' or 'fsharp')"
                                                        },
                                                        "pattern": {
                                                            "type": "string",
                                                            "description": "glob pattern"
                                                        },
                                                        "scheme": {
                                                            "type": "string",
                                                            "description": "e.g. 'https' or 'file'"
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "string",
                                        "description": "A language-id (e.g. 'plaintext' or 'fsharp')"
